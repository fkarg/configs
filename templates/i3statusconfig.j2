# i3status-rs configuration settings.
# {{ ansible_managed }}

theme = "plain"
icons = "awesome"

# Show Entropia club status
[[block]]
block = "custom"
command = "/home/{{ username }}/{{ configs_repo }}/scripts/status.sh"
interval = 1800

# Show battery state of wireless mouse and keyboard (or other devices, really)
[[block]]
block = "custom"
command = "/home/{{ username }}/{{ configs_repo }}/scripts/wireless_battery.sh"
interval = 1800

# showing the current state of an external display (and switch, if necessary)
[[block]]
block = "custom"
command = "/home/{{ username }}/{{ configs_repo }}/scripts/multiscreens.sh"
interval = 10

[[block]]
block = "docker"
interval = 10
format = "{running}/{total}"

[[block]]
block = "memory"
display_type = "memory"
clickable = false
format_mem = "{mem_used_percents} {mem_used}"
warning_mem = 60.0
critical_mem = 80.0
interval = 10

{% if lan is defined %}
[[block]]
block = "net"
device = "{{ lan }}"
format = "{bitrate}"
interval = 10
{% endif %}

{% if wifi is defined %}
[[block]]
block = "net"
device = "{{ wifi }}"
format = "{signal_strength} {ssid}"
interval = 10
{% endif %}

{% if wifi2 is defined %}
[[block]]
block = "net"
device = "{{ wifi2 }}"
format = "{signal_strength} {ssid}"
interval = 10
{% endif %}

