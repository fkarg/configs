{% if gpu is defined %}
[[block]]
block = "nvidia_gpu"
label = "{{ gpu }}"
show_clocks = true
interval = 5
{% endif %}

[[block]]
block = "cpu"
format = "{barchart} {utilization} {frequency}"
interval = 5

[[block]]
block = "temperature"
collapsed = true
interval = 10
format = "{min} min {max} max {average} avg"
chip = "*-isa-*"

[[block]]
block = "load"
interval = 5
format = "{1m} {5m} {15m}"

{% if battery is defined and battery %}
[[block]]
block = "battery"
# driver = "sysfs"
interval = 5
format = "{percentage} {time}h {power}"
good = 99
info = 99
{% endif %}

